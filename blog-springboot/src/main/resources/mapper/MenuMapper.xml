<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.yehonghan.mapper.MenuMapper">

    <resultMap id="BaseResultMap" type="top.yehonghan.entity.Menu">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="path" column="path" jdbcType="VARCHAR"/>
            <result property="component" column="component" jdbcType="VARCHAR"/>
            <result property="icon" column="icon" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="orderNum" column="order_num" jdbcType="TINYINT"/>
            <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
            <result property="isHidden" column="is_hidden" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,path,
        component,icon,create_time,
        update_time,order_num,parent_id,
        is_hidden
    </sql>
    <select id="listMenusByUserInfoId" resultType="top.yehonghan.entity.Menu">
        SELECT DISTINCT
            m.id,
            `name`,
            `path`,
            component,
            icon,
            is_hidden,
            parent_id,
            order_num
        FROM
            tb_user_role ur
                JOIN tb_role_menu rm ON ur.role_id = rm.role_id
                JOIN `tb_menu` m ON rm.menu_id = m.id
        WHERE
            user_id = #{userInfoId}
    </select>
</mapper>
